.cart-list .theme {
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
}
.cart-list .theme .theme-left {
  flex: 8;
}
.cart-list .theme .theme-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  color: #000;
  font-weight: 400;
}
.cart-list .cart-item {
  padding: 20rpx;
  width: 100%;
  height: 187.5rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-list .cart-item .select {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  color: var(--themeColor);
  font-size: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-list .cart-item .logo {
  margin-left: 30rpx;
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-list .cart-item .logo image {
  width: 140rpx;
}
.cart-list .cart-item .info {
  flex: 3;
  height: 100%;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart-list .cart-item .info .info-title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-list .cart-item .info .info-bottom {
  display: flex;
  justify-content: space-between;
}
.cart-list .cart-item .info .info-bottom .price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 400;
}
.cart-list .cart-item .info .info-bottom .count {
  display: flex;
}
.cart-list .cart-item .info .info-bottom .count button {
  padding: 0;
  margin: 0;
  width: 50rpx;
  height: 50rpx;
  border: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-list .cart-item .info .info-bottom .count view {
  width: 60rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
