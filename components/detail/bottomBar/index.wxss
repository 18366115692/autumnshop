.bottom-bar {
  display: flex;
  height: 90rpx;
  border-top: 1px solid #ccc;
}
.bottom-bar .bottom-bar-left {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom-bar .bottom-bar-left .service,
.bottom-bar .bottom-bar-left .share,
.bottom-bar .bottom-bar-left .shopcar {
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.bottom-bar .bottom-bar-left .service button,
.bottom-bar .bottom-bar-left .share button,
.bottom-bar .bottom-bar-left .shopcar button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom-bar .bottom-bar-right {
  flex: 1;
  display: flex;
}
.bottom-bar .bottom-bar-right .addcar,
.bottom-bar .bottom-bar-right .pay {
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}
.bottom-bar .bottom-bar-right .addcar {
  background-color: #FFA200;
}
.bottom-bar .bottom-bar-right .pay {
  background-color: var(--themeColor);
}
